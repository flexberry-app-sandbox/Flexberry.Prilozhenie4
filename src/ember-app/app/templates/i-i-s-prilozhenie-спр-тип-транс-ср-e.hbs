<h3 class="ui header">{{t "forms.i-i-s-prilozhenie-спр-тип-транс-ср-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.код
      class=(if (v-get validationModel "код" "isInvalid") "error")
      label=(t "forms.i-i-s-prilozhenie-спр-тип-транс-ср-e.код-caption")
      data-test-i-i-s-prilozhenie-спр-тип-транс-ср-e-код=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "код" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-prilozhenie-спр-тип-транс-ср-e.наименование-caption")
      data-test-i-i-s-prilozhenie-спр-тип-транс-ср-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.описание
      class=(if (v-get validationModel "описание" "isInvalid") "error")
      label=(t "forms.i-i-s-prilozhenie-спр-тип-транс-ср-e.описание-caption")
      data-test-i-i-s-prilozhenie-спр-тип-транс-ср-e-описание=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "описание" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.вместВКубМ
      class=(if (v-get validationModel "вместВКубМ" "isInvalid") "error")
      label=(t "forms.i-i-s-prilozhenie-спр-тип-транс-ср-e.вместВКубМ-caption")
      data-test-i-i-s-prilozhenie-спр-тип-транс-ср-e-вместВКубМ=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "вместВКубМ" "message")}}
  </div>
</form>
